<div class="row">
    <div class="col-sm-12 d-flex justify-content-center">
        <h1>Eat Da Burger!</h1>
    </div>
</div>

<div class="row">
    <div class="col-sm-6">
        <h2 class="text-center">List of burgers to devour!</h2>

        <ul>
            {{#each burgers}}
            {{#unless devoured}}
            {{> burgers/burger-block devoured=true}}
            {{/unless}}
            {{/each}}
        </ul>
    </div>

    <div class="col-sm-6">
        <h2 class="text-center">These burgers have been devoured!</h2>

        <ul>
            {{#each burgers}}
            {{#if devoured}}
            {{> burgers/burger-block devoured=false}}
            {{/if}}
            {{/each}}
        </ul>
    </div>
</div>

<div class="row">
    <div class="col-sm-6">

        <div class="row">
            <div class="col-sm-12 text-center">
                <h2>Add a Burger</h2>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-12 text-center">
                <form class="create-form">

                    <div class="form-group">
                        <label for="burger-name">Burger Name:</label>
                        <input type="text" id="burger-name" name="name">
                    </div>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-12 text-center">
                <button type="submit">Add Burger</button>
                </form>
            </div>
        </div>

    </div>
</div>